export default {
  async fetch(request) {
    const url = new URL(request.url);
    const path = url.pathname;

    // Serve root
    if (path === "/" || path === "/index.html") {
      return new Response(
        `<!DOCTYPE html>
<html>
<head>
<title>AISE–EXECUTIVE</title>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<style>
  body {
    background: #000;
    color: #00ffaa;
    font-family: monospace;
    padding: 40px;
  }
  h1 { font-size: 2rem; }
  .sub { opacity: 0.7; margin-top: 12px; }
</style>
</head>
<body>
<h1>AISE–EXECUTIVE: Worker is online</h1>
<div class="sub">Origin responding. SSL/TLS handshake should now stabilize.</div>
</body>
</html>`,
        { status: 200, headers: { "content-type": "text/html" } }
      );
    }

    // Fallback
    return new Response("Not Found", { status: 404 });
  },
};